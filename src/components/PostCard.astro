---
import { type CollectionEntry } from "astro:content";
import { withBase } from "../utils/withBase";

type Props = CollectionEntry<"posts">["data"] & { slug: string };

const { title, author, publishedAt, slug } = Astro.props;
---

<a href={withBase(`posts/${slug}`)} class="block h-full">
  <div class="flex flex-col gap-4 rounded shadow-lg p-8 h-full">
    <h2 class="font-bold text-2xl">{title}</h2>
    <div class="text-sm text-gray-500">
      <span>{publishedAt}</span> by <span>{author}</span>
    </div>
  </div>
</a>

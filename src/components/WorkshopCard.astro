---
import { type CollectionEntry } from "astro:content";
import { withBase } from "../utils/withBase";
import OrganizerCard from "./OrganizerCard.astro";
import GuestTag from "./GuestTag.astro";

type Props = CollectionEntry<"workshops">["data"] & { slug: string };

const { title, organizer, slug, isGuest } = Astro.props;
---

<a href={withBase(`workshops/${slug}`)} class="block h-full">
  <div class="flex flex-col gap-4 rounded shadow-lg p-8 h-full">
    <h2 class="font-bold text-2xl flex items-center">
      {isGuest && <GuestTag className="text-base font-medium me-2 px-2 py-1" />}
      {title}
    </h2>
    <OrganizerCard
      name={organizer.name}
      icon={organizer.icon}
      organization={organizer.organization}
      profile={organizer.profile}
    />
  </div>
</a>

---
import "../styles/global.css";
import { withBase } from "../utils/withBase";

const eventTitle = "Go Workshop Conference 2025 IN KOBE";
const eventDescription =
  "デザイン・クリエイティブセンター神戸(KIITO)で12/13(土)に開催！";

const ogp1200wImageURL = new URL(withBase("logo_1200w.png"), Astro.url.origin);
const ogp630wImageURL = new URL(withBase("logo_630w.png"), Astro.url.origin);

const { title } = Astro.props;
const pageTitle = title ? `${title} | ${eventTitle}` : eventTitle;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:site_name" content={eventTitle} />
    <meta property="og:title" content={title || eventTitle} />
    <meta property="og:description" content={eventDescription} />
    <meta property="og:image" content={ogp1200wImageURL} />
    <meta property="og:type" content="website" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={eventDescription} />
    <meta name="twitter:image" content={ogp630wImageURL} />
    <meta name="twitter:card" content="summary" />
  </head>
  <body class="min-h-screen flex flex-col gap-4 md:gap-8">
    <nav class="mx-4 md:mx-auto mt-4 md:mt-8 md:max-w-content md:w-full">
      <ul class="flex gap-4 md:text-xl">
        <li>
          <a href={withBase()}>Home</a>
        </li>
        <li>
          <a href={withBase("workshops")}>Workshops</a>
        </li>
        {
          // ブログ公開時まで一時的に導線を隠す
          false && (
            <li>
              <a href={withBase("posts")}>Blog</a>
            </li>
          )
        }
        <li>
          <a href={withBase("staff")}>Staff</a>
        </li>
        <li>
          <a href={withBase("coc")}>Code of Conduct</a>
        </li>
      </ul>
    </nav>
    <main class="mx-4 md:mx-auto md:max-w-content flex-grow md:w-full">
      <slot />
    </main>
    <footer class="w-full bg-gray-100 p-8 mx-auto">
      <div
        class="mx-auto flex flex-col md:flex-row md:justify-between items-center gap-4 md:max-w-content"
      >
        <div class="w-18">
          <img
            src={withBase("/go_text_navy.png")}
            alt="Go Workshop Conference 2025 IN KOBE"
          />
        </div>
        <div class="text-center md:text-right text-sm text-gray-600">
          The original Go gopher was designed by
          <a class="underline" href="https://reneefrench.blogspot.com/"
            >Renée French</a
          >.
          <br />
          Event illustrations by
          <a class="underline" href="https://github.com/UserMiyam">MIYA</a>.
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Work+Sans:wght@450..700&display=swap");

  html {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  nav {
    font-family: "Work Sans", sans-serif;
    font-weight: 450;
  }
</style>
